{
  "name": "TextGeneration",
  "description": "Standard autoregressive text generation workflow",
  "default_model": "llm",
  "inputs": [
    {
      "name": "prompt_tokens",
      "type": "u32[]",
      "description": "Tokenized prompt"
    },
    {
      "name": "max_tokens",
      "type": "u32",
      "default": 256
    },
    {
      "name": "temperature",
      "type": "f32",
      "default": 0.7
    },
    {
      "name": "top_k",
      "type": "u32",
      "default": 40
    },
    {
      "name": "top_p",
      "type": "f32",
      "default": 0.95
    },
    {
      "name": "seed",
      "type": "u32",
      "default": 42
    },
    {
      "name": "eos_token",
      "type": "u32",
      "default": 151645
    }
  ],
  "steps": [
    {
      "op": "prefill",
      "model_id": "llm",
      "input": "prompt_tokens",
      "logits_binding": "logits",
      "description": "Process prompt tokens through forward pass, populating KV cache"
    },
    {
      "op": "compute_int",
      "output": "current_pos",
      "expr": "{prompt_tokens.len}"
    },
    {
      "op": "while",
      "condition": "max_tokens",
      "max_iterations": "{max_tokens}",
      "body": [
        {
          "op": "sample",
          "logits": "logits",
          "output": "next_token",
          "temperature": "{temperature}",
          "top_k": "{top_k}",
          "top_p": "{top_p}",
          "seed": "{seed}"
        },
        {
          "op": "check_eos",
          "input": "next_token",
          "output": "is_eos",
          "eos_token": "{eos_token}"
        },
        {
          "op": "if",
          "condition": "is_eos",
          "then": [
            {
              "op": "break"
            }
          ]
        },
        {
          "op": "append_token",
          "input": "next_token",
          "output": "generated_tokens"
        },
        {
          "op": "graph_forward",
          "model_id": "llm",
          "token_var": "next_token",
          "logits_binding": "logits",
          "position": "{current_pos}"
        },
        {
          "op": "compute_int",
          "output": "current_pos",
          "expr": "{current_pos} + 1"
        }
      ]
    },
    {
      "op": "return",
      "output": "generated_tokens"
    }
  ]
}